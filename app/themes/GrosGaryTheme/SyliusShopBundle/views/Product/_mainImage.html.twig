{% if product.imagesByType('listing') is not empty %}
    {% set path = product.imagesByType('listing').first.path|imagine_filter('sylius_shop_product_original') %}
{% elseif product.images.first %}
    {% set path = product.images.first.path|imagine_filter(filter|default('sylius_shop_product_thumbnail')) %}
{% else %}
    {% set path = '//placehold.it/200x200' %}
{% endif %}

<img src="{{ path }}" alt="{{ product.name }}" />
