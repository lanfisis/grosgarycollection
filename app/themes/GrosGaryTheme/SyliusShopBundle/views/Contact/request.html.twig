{% extends '@SyliusShop/layout.html.twig' %}

{% form_theme form '@SyliusUi/Form/theme.html.twig' %}

{% block content %}
    <div class="cotact--area pb-100">
        <div class="container-fluid">
            <div class="contact-wrapper">
                <div class="contac-title">
                    <h3>{{ 'grosgary.contact'|trans }}</h3>
                </div>
                <div class="contact-info">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="single-contact-info text-center">
                                <i class="fa fa-map-marker"></i>
                                <h3>{{ 'grosgary.our_address'|trans }}</h3>
                                <p>{{ 'grosgary.our_address_value'|trans }}</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="single-contact-info text-center">
                                <i class="fa fa-envelope-o"></i>
                                <h3>{{ 'grosgary.my_email'|trans }}</h3>
                                <p>hello@grosgarycollection.com</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="single-contact-info text-center">
                                <i class="fa fa-clock-o"></i>
                                <h3>{{ 'grosgary.opening_hour'|trans }}</h3>
                                <p>{{ 'grosgary.opening_hour_value'|trans }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
